{
  "root": true,
  "extends": ["./node_modules/sanctuary-style/eslint-es6.json"],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {"node": true, "es6": true},
  "overrides": [
    {
      "files": ["README.md"],
      "plugins": ["markdown"],
      "rules": {
        "no-undef": ["off"],
        "strict": ["off"]
      }
    }
  ]
}
